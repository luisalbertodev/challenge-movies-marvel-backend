{
	"name": "node-express-typescript",
	"version": "1.0.0",
	"description": "fake auth and function for send email with nodemailer",
	"main": "index.js",
	"repository": "https://github.com/luisalbertodev/node-express-typescript",
	"author": "luis alberto perez coello",
	"license": "MIT",
	"private": false,
	"engines": {
		"node": ">=12",
		"yarn": "*"
	},
	"scripts": {
		"start": "node built/index.js",
		"dev": "npx nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node --files src/index.ts",
		"build": "tsc -p . && cp -R src/templates ./build ",
		"prepare": "husky install"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"jwt-simple": "^0.5.6",
		"morgan": "^1.10.0",
		"nodemailer": "^6.6.2",
		"nodemailer-mailgun-transport": "^2.1.3",
		"nodemon": "^2.0.9",
		"supertest": "^6.1.3",
		"tslint": "^6.1.3",
		"tslint-config-airbnb": "^5.11.2",
		"tslint-config-prettier": "^1.18.0",
		"tsyringe": "^4.5.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.12",
		"@types/node": "^16.0.0",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"eslint": "^7.30.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.23.4",
		"husky": ">=6",
		"lint-staged": ">=10",
		"prettier": "^2.3.2",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.3.5"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	}
}
