{
	"name": "node-express-typescript",
	"version": "1.0.0",
	"description": "fake auth and function for send email with nodemailer",
	"main": "./build/index.js",
	"repository": "https://github.com/luisalbertodev/node-express-typescript",
	"author": "luis alberto perez coello",
	"license": "MIT",
	"private": false,
	"engines": {
		"node": ">=12",
		"yarn": "*"
	},
	"scripts": {
		"start": "node -r tsconfig-paths/register -r ts-node/register build/index.js",
		"dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
		"build": "tsc -p . && cp -R src/templates ./build",
		"prepare": "husky install",
		"lint": "eslint -c .eslintrc.js --ext .ts ./build"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-joi-validation": "^5.0.0",
		"express-validation": "^3.0.8",
		"handlebars": "^4.7.7",
		"helmet": "^4.6.0",
		"joi": "^17.4.0",
		"jwt-simple": "^0.5.6",
		"method-override": "^3.0.0",
		"moment-timezone": "^0.5.33",
		"morgan": "^1.10.0",
		"nodemailer": "^6.6.2",
		"nodemon": "^2.0.9",
		"supertest": "^6.1.3",
		"tsyringe": "^4.5.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.12",
		"@types/method-override": "0.0.31",
		"@types/morgan": "^1.9.2",
		"@types/node": "^16.0.0",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"eslint": "^7.30.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.23.4",
		"husky": ">=6",
		"lint-staged": ">=10",
		"prettier": "^2.3.2",
		"ts-node": "^10.0.0",
		"ts-node-dev": "^1.1.8",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^6.1.3",
		"tslint-config-airbnb": "^5.11.2",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.3.5"
	},
	"lint-staged": {
		"*.ts": "tslint --fix",
		"*.{ts,css,md}": "prettier --write"
	}
}
